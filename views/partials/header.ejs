<html>
	<head>
		<title>🍾 Bubbly</title>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
		<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.14/semantic.min.css">
		<link rel="stylesheet" type="text/css" href="/stylesheets/app.css">
		<script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.0/semantic.min.js"></script>
		<link href="https://fonts.googleapis.com/css?family=Grand+Hotel" rel="stylesheet">
		<meta charset='utf-8'>
		<meta name="viewport" content="initial-scale=1.0, user-scalable=no">
	</head>
	<body>
		<div class="ui secondary menu">
			<div class="ui container">
				<a href="/" class="item">🏡 Home</a>
				<a href="/" class="item">💬 Messages</a>
				<a href="/" class="item">🌎 Friends</a>
				<div class="right menu">
					<% if (!currentUser) {%>
						<a href="/register"><button class="ui violet button">✨sign up</button></a>
	      				<a href="/login"><button class="ui violet basic button">🚀login</button></a>
      				<% } else { %>
      					<div class="ui violet image label">
						  👋<%= currentUser.username %>
						</div>
	      				<a href="/logout"><button class="ui violet basic button">✌🏽logout</button></a>
      				<% } %>
  				</div>
			</div>
		</div>

		<form action="/bars" method="GET" class="ui form">
			<div class="menu field">
				<div class="fifteen wide field">
					<input type="text" name="search" placeholder="🌃✨ Search Cities...">
				</div>
			</div>
		</form>

		<div class="container">
			<% if (error && error.length > 0) { %>
				<div class="ui red message">
					<%= error %>
				</div>
			<% } %>
			<% if (success && success.length > 0) { %>
				<div class="ui green message">
					<%= success %>
				</div>
			<% } %>
		</div>